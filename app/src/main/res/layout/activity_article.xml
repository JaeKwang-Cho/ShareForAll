<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.agora.ArticleActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="78dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="84dp">

            <TextView
                android:id="@+id/title_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/nickname_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/icon_article"
        android:layout_width="256dp"
        android:layout_height="264dp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="223dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/content_article"
        android:layout_width="228dp"
        android:layout_height="49dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="531dp" />

    <Button
        android:id="@+id/comments_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comments"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="634dp" />
</LinearLayout>